<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Transparent background -->
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" />
        </shape>
    </item>

    <!-- Main background of the BottomNavigationView -->
    <item android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#252424" /> <!-- Replace with your desired background color -->
        </shape>
    </item>
</layer-list>