<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Number of Workouts Completed -->
    <TextView
        android:id="@+id/numberOfWorkoutsCompleted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number of Workouts Completed:" />

    <!-- List of Completed Workouts -->
    <ListView
        android:id="@+id/completedWorkoutsList"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <!-- Daily Workouts Completed -->
    <LinearLayout
        android:id="@+id/dailyWorkoutsCompletedContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dailyWorkoutsCompleted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daily Workouts Completed:" />

        <TextView
            android:id="@+id/loginsCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logins:" />

    </LinearLayout>

    <!-- Diagram (You can replace this with an actual diagram library) -->
    <ImageView
        android:id="@+id/diagram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/male" />

</LinearLayout>

</ScrollView>